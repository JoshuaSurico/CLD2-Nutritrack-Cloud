<%- include('partials/header') %>

<div class="max-w-md mx-auto bg-white rounded-2xl shadow-sm border border-slate-200 p-8">
    <h2 class="text-2xl font-bold text-slate-800 mb-2 text-center">Bon retour !</h2>
    <p class="text-slate-500 text-center mb-8">Veuillez vous identifier.</p>

    <form action="/login" method="POST" class="space-y-4">
        <div>
            <label class="block text-sm font-medium text-slate-700 mb-1">Email</label>
            <input type="email" name="email" required 
                class="w-full px-4 py-2 border border-slate-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:outline-none">
        </div>
        <div>
            <label class="block text-sm font-medium text-slate-700 mb-1">Mot de passe</label>
            <input type="password" name="password" required 
                class="w-full px-4 py-2 border border-slate-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:outline-none">
        </div>
        <button type="submit" class="w-full bg-indigo-600 text-white font-bold py-3 rounded-lg hover:bg-indigo-700 transition shadow-lg shadow-indigo-200">
            Connexion
        </button>
    </form>

    <p class="mt-6 text-center text-slate-500 text-sm">
        Pas encore de compte ? <a href="/register" class="text-blue-600 font-semibold hover:underline">Cr√©er un compte</a>
    </p>
</div>

</body>
</html>